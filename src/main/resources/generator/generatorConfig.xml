<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
    "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
<context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
<!--生成POJO-->
  <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
    <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
    <property name="caseSensitive" value="true"/>
    <property name="forceAnnotation" value="true"/>
<!--    <property name="beginningDelimiter" value="`"/>-->
<!--    <property name="endingDelimiter" value="`"/>-->
  </plugin>

<!--生成Mapper-->
  <plugin type="tk.mybatis.mapper.generator.TemplateFilePlugin">
    <property name="singleMode" value="true"/>
<!--    避免重新生成覆盖Mapper-->
    <property name="targetProject" value="src/test"/>
<!--    <property name="targetProject" value="src/main/java"/>-->
    <property name="targetPackage" value="top.codermhc.drugmanager.mapper"/>
    <property name="templatePath" value="generator/mappers.ftl"/>
    <property name="mapperSuffix" value="Mapper"/>
    <property name="fileName" value="${tableClass.shortClassName}${mapperSuffix}.java"/>
    <property name="templateFormatter" value="tk.mybatis.mapper.generator.formatter.FreemarkerTemplateFormatter"/>
  </plugin>

  <jdbcConnection driverClass="org.mariadb.jdbc.Driver"
    connectionURL="jdbc:mariadb://mariadb:3306/drug_manager"
    userId="MHC"
    password="yousql">
  </jdbcConnection>

  <javaModelGenerator targetPackage="top.codermhc.drugmanager.entity"
    targetProject="src/main/java"/>

  <table tableName="%">
    <generatedKey column="id" sqlStatement="MySql" identity="true"/>
  </table>
</context>
</generatorConfiguration>
